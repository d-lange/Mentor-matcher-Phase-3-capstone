<% @matches.each do |match| %>
  <% if current_user.type == "Mentor" %>
    <div class="row">
      <div class="small-4 large-4 columns">
        <a href="<%=match.mentee.public_profile_url%>" target="_blank"><%= image_tag match.mentee.picture_url %></a>
      </div>
      <div class="small-8 large-8 columns">
        <b><%= match.mentee.first_name %> <%= match.mentee.last_name %></b><br>
        <small><%= match.mentee.current_title %> at</small><br>
        <b><%= match.mentee.current_company%></b><br>
      </div>
    </div>

  <hr class="style-two">

    <div class="row">
      <div class="small-12 small-centered columns text-center"><small><i><%= match.mentee.mission_statement %></i></small></div>
    </div>

  <hr class="style-two">
    <div class="row">
      <div class="small-12 columns">
        <div class="button-group text-center">
        <%= link_to match_path(match.id, :match => { :type => "AcceptedMatch" }), {:method => :put} do %>
          <div class="button success"><i class='step fi-like size-36'></i><br>Accept</div>
        <% end %>
        <%= link_to match_path(match.id), {:method => :delete} do %>
          <div class="button warning"><i class='step fi-lock size-36'></i><br>Close</div>
        <% end %>
        <%= link_to match_path(match.id, :match => { :type => "BlockedMatch" }), {:method => :put} do %>
          <div class="button alert"><i class='step fi-prohibited size-36'></i><br>Block</div>
        <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="small-4 large-4 columns">
        <a href="<%=match.mentor.public_profile_url%>" target="_blank"><%= image_tag match.mentor.picture_url %></a>
      </div>
      <div class="small-8 large-8 columns">
        <b><%= match.mentor.first_name %> <%= match.mentor.last_name %></b><br>
        <small><%= match.mentor.current_title %> at</small><br>
        <b><%= match.mentor.current_company%></b><br>
      </div>
    </div>

  <hr class="style-two">

    <div class="row">
      <div class="small-12 small-centered columns text-center"><small><i><%= match.mentor.mission_statement %></i></small></div>
    </div>

  <hr class="style-two">
    <div class="row">
      <div class="small-12 columns">
        <div class="button-group expanded text-center">
        <%= link_to match_path(match.id, :match => { :type => "AcceptedMatch" }), {:method => :put} do %>
          <div class="button success"><i class='step fi-mail size-36'></i><br>Message</div>
        <% end %>
        <%= link_to match_path(match.id, :match => { :type => "ClosedMatch" }), {:method => :put} do %>
          <div class="button warning"><i class='step fi-lock size-36'></i><br>Close</div>
        <% end %>
        <%= link_to match_path(match.id, :match => { :type => "BlockedMatch" }), {:method => :put} do %>
          <div class="button alert"><i class='step fi-prohibited size-36'></i><br>Block</div>
        <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <hr class="style-three">

<% end %>
