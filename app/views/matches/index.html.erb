  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script>
  $(function() {
    $( "#tabs" ).tabs();
  });
  </script>


<h1><%=current_user.first_name%>'s Requests</h1>
<div id="tabs">
<ul>
  <li><a href="#tabs-1">Interested <%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%></a></li>
  <li><a href="#tabs-2">My Requests</a></li>
</ul>

  <div id="tabs-1">
    <div class="container">
      <% if @matches_pending_my_decision %>
        <% @matches_pending_my_decision.each do |decision| %>
            <div class="row">
              <div class="small-4 large-4 columns"><%= image_tag decision.initiator.picture_url %></div>
              <div class="small-8 large-8 columns">
                <%= decision.initiator.first_name %> <%= decision.initiator.last_name %><br>
                <%= decision.initiator.industry %><br>
              </div>
            </div>
          <br>
            <div class="row">
              <div class="small-12 small-centered columns"><small><%= decision.initiator.mission_statement %></small></div>
            </div>
          <br>
            <div class="row">
              <ul class="button-group">
                <a href="#" class="button success">Connect!</a>
                <a href="#" class="button">No Thanks.</a>
                <a href="#" class="button alert">Block <%= decision.initiator.first_name %>!</a>
              </ul>
            </div>
          <hr>
        <% end %>
      <% end %>
    </div>
  </div>

    <div id="tabs-2">
      <div class="container">
        <% if @matches_pending_others_decision %>
          <% @matches_pending_others_decision.each do |decision| %>
          <div class="row">
            <div class="small-4 large-4 columns"><%= image_tag decision.receiver.picture_url %></div>
            <div class="small-8 large-8 columns">
              <%= decision.receiver.first_name %> <%= decision.receiver.last_name %><br>
              <%= decision.receiver.industry %><br>
            </div>
          </div>
        <br>
          <div class="row">
            <div class="small-12 small-centered columns"><small><%= decision.receiver.mission_statement %></small></div>
          </div>
        <br>
          <div class="row">
            <ul class="button-group round">
              <a href="#" class="button expand">View on LinkedIn</a>
              <a href="#" class="button alert">Cancel Invitation!</a>
            </ul>
          </div>
        <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>
</div>
