<h1 class="text-center"><b><%= @user.first_name %> <%= @user.last_name %></b> |

<!-- If errors - place here -->

  <div class="row">
    <div class="small-4 large-4 columns">
      <%=image_tag current_user.picture_url %>
    </div>
    <div class="small-8 columns">

  </div>
<hr class="style-two">

  <div class="row">
    <div class="small-12 small-centered columns text-center">
      <i><%= @user.mission_statement %></i>
    </div>
    <!-- <i class="step fi-pencil size-24"></i> -->
  </div>
    <% if @user.id != current_user.id %>
      <form action="#" method="post">
        <input type="hidden" method="_update">
        <input class="button" type="button" value='Interested?'>
      </form>
    <%end%>

<hr class="style-three">

  <div class="row">
    <% if @user.interests %>
      <p class="text-center">Current interests</p>
        <% @user.user_interests.each do |user_interest| %>
        <div class="small-6 columns">
          <%= link_to "#{user_interest.interest.name}", user_interest_path(user_interest.id), :method => :delete %>
        </div>
        <% end %>
    <% end %>
  </div>

<hr class="style-three">

  <% if @user.id != current_user.id %>
    <a href="<%= @user.public_profile_url %>" class="button">View me on LinkedIn</a>
  <% else %>
    <div class="button-group text-center">
      <a href="<%= @user.public_profile_url %>" class="button">View me on LinkedIn</a>
      <a href="https://www.linkedin.com/profile/edit?trk=nav_responsive_sub_nav_edit_profile" target='_empty' class="button">Edit my LinkedIn Profile</a>
    </div>
  <% end %>

<hr class="style-three">

