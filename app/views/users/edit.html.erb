<h1 class="text-center"><b><%= @user.first_name %> <%= @user.last_name %></b> | Editing Profile </h1>
<br>

<!-- <i class="step fi-pencil size-24"></i> -->
<!-- If errors - place here -->

    <div class="small-12 columns">
      <%= form_for(:user, url: user_path(@user), html:{method:"put"}) do |f| %>
        <div class="row">
          <p class="small-12 columns text-center">Do you want your profile <br> shown to prospective <%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%>?</p>
        </div>

        <div class="row">
          <p class="small-1 columns text-center"></p>
          <div class="small-3 columns text-center">
            <i class="step fi-dislike size-48 yes-no-selector-thumbs"></i>
          </div>
          <label class="ios7-switch small-4 columns text-center" style="font-size: 36px";>
            <input type="checkbox" name= "user[status]" value="available" checked>
            <span></span>
          </label>
          <div class="small-3 columns text-center">
            <i class="step fi-like size-48 yes-no-selector-thumbs"></i>
          </div>
          <p class="small-1 columns text-center"></p>
        </div>

        <table class="text-left" id="users-edit-form-table">
          <tr class="row">
            <td class="small-4 columns"><small> First Name</small></td>
            <td class="small-8 columns"><%= f.text_field :first_name, :placeholder => "First Name" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Last Name</small></td>
            <td class="small-8 columns"><%= f.text_field :last_name, :placeholder => "Last Name" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Location</small></td>
            <td class="small-8 columns"><%= f.text_field :location, :placeholder => "Location" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Industry</small></td>
            <td class="small-8 columns"><%= f.text_field :industry, :placeholder => "Industry" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Portrait URL</small></td>
            <td class="small-8 columns"><%= f.text_field :picture_url, :placeholder => "Portrait URL" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Current Title</small></td>
            <td class="small-8 columns"><%= f.text_field :current_title, :placeholder => "Current Title" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Current Company</small></td>
            <td class="small-8 columns"><%= f.text_field :current_company, :placeholder => "Current Company" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Industry</small></td>
            <td class="small-8 columns"><%= f.text_field :industry, :placeholder => "Industry" %></td>
          </tr>
          <tr class="row">
            <td class="small-4 columns"><small> Mission Statement</small></td>
            <td class="small-8 columns"><%= f.text_field :mission_statement, :placeholder => "Mission Statement" %></td>
          </tr>
        </table>
        <%= f.submit class: "button expanded" %>
      <% end %>

<% if @errors %>
  <% @errors.each do |error| %>
    <div class="row">
      <div class="small-3 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-72"></i>
      </div>
      <div class="small-9 columns">
        <b><%=error.full_messages%></b>
      </div>
    </div>
    <hr class="style-two">
  <% end %>
<% end %>

<hr class="style-three">
  <div class="row">
    <p class="text-center">Click below to remove one of your interests:</p>
    <div class="small-12 columns text-center" id="user-edit-remove-interest-container">
      <% @user.user_interests.each do |user_interest| %>
        <div class="small-6 columns">
          <%= link_to "#{user_interest.interest.name}", user_interest_delete_path(user_interest), :class => "button expanded warning professional-interest-button" %>
        </div>
      <% end %>
    </div>
  </div>
<% if current_user.interests.length > 0 %>
<% end %>
<hr class="style-three">
