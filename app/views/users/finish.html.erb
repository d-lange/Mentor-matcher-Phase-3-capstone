<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

<% if @errors %>
    <% @errors.each do |error| %>
    <br>
    <div class="row">
      <p class="small-2 columns text-center"></p>
      <div class="small-3 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-36"></i>
      </div>
      <div class="small-5 columns text-center">
        <b><%=error%></b>
      </div>
      <p class="small-2 columns text-center"></p>
    </div>
  <% end %>
<% end %>

<div style="font-family:Open Sans, sans-serif;">
  <h1 class="text-center">Finish Your Profile</h1>
<%= form_for :user do |f| %>

<table class="text-left">
  <tr class="row">
    <td class="small-4 columns">
      <small>Your mission statement:</small>
    </td>
    <td class="small-8 columns">
      <%= f.text_field :mission_statement %>
    </td>
  </tr>
  <tr class="row">
    <td class="small-4 columns">
      <small>Current position:</small>
    </td>
    <td class="small-8 columns">
      <%= f.text_field :current_title %>
    </td>
  </tr>
  <tr class="row">
    <td class="small-4 columns">
      <small>Current company:</small>
    </td>
    <td class="small-8 columns">
      <%= f.text_field :current_company %>
    </td>
  </tr>
  <tr class="row">
    <td class="small-4 columns">
      <small>Are you seeking or offering mentorship?</small>
    </td>
    <td class="small-8 columns text-center">
      <!-- <label class="ios7-switch" style="font-size: 36px";>
        <input type="checkbox" checked>
        <span></span>
      </label> <br> -->
      <%= f.radio_button :type, 'Mentor', :checked => true %>
      <%= label :type_Mentor, 'Mentor' %>
      <%= f.radio_button :type, 'Mentee' %>
      <%= label :type_Mentee, 'Mentee' %>
    </td>
  </tr>
</table>
<%= f.submit value="Finish my Profile!", class: "button expanded" %>
<% end %>
<hr class="style-two">
</div>
