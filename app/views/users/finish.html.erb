<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

<% if @errors %>
    <% @errors.each do |error| %>
    <br>
    <div class="row">
      <p class="small-2 columns text-center"></p>
      <div class="small-3 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-36"></i>
      </div>
      <div class="small-5 columns text-center">
        <b><%=error%></b>
      </div>
      <p class="small-2 columns text-center"></p>
    </div>
  <% end %>
<% end %>

<div style="font-family:Open Sans, sans-serif;">
  <h1 class="text-center">Finish Your Profile</h1>
<hr class="style-two">

<%= form_for :user do |f| %>

  <div class="row">
    <div class="small-12 columns text-center">Are you seeking or offering mentorship?</div>
  </div>

<div class="row">
  <div class="text-center">
    <div class="small-6 columns">
      <ul class="button-group toggle" data-toggle="buttons-radio">
        <li>
          <input type="radio" id="r1" name="r-group" data-toggle="button">
          <label class="button expanded" for="r1">Seeking Mentorship</label>
        </li>
      </ul>
    </div>
    <div class="small-6 columns">
      <ul class="button-group toggle" data-toggle="buttons-radio">
        <li>
          <input type="radio" id="r2" name="r-group" data-toggle="button">
          <label class="button expanded" for="r2">Offering Mentorship</label>
        </li>
      </ul>
    </div>
  </div>
</div>

  <div class="row">
    <div class="small-12 columns">
      <p class="text-center">Tell us about what you're looking for:</p>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.text_field :mission_statement %>
    </div>
  </div>

<table class="text-left">
  <tr class="row">
    <td class="small-4 columns">
      <small>Current position:</small>
    </td>
    <td class="small-8 columns">
      <%= f.text_field :current_title %>
    </td>
  </tr>
  <tr class="row">
    <td class="small-4 columns">
      <small>Current company:</small>
    </td>
    <td class="small-8 columns">
      <%= f.text_field :current_company %>
    </td>
  </tr>
</table>

<h3><b><%= f.submit value="Finish my Profile!", class: "button expanded" %></b></h3>
<% end %>
</div>
