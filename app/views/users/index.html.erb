<h1><%= current_user.type == "Mentor" ? "Seeker" : "Mentor"%> Matches</h1>

<% @users.each do |user| %>
<div class="container">
  <div class="row">
    <div class="small-4 large-4 columns"><%= image_tag user.picture_url %></div>
    <div class="small-8 large-8 columns">
      <b><%= user.first_name %> <%= user.last_name %></b><br>
      <small><%= user.current_title %></small><br>
      <small>at </small><b><%= user.current_company%></b><br>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="small-12 small-centered columns"><small><i><%= user.mission_statement %></i></small></div>
  </div>
  <hr class="style-two">
  <div class="row">
    <ul class="button-group small-centered">
      <a href="#" class="button small expand success">I'm interested!</a>
    </ul>
  </div>
</div>
<hr class="style-one">

<% end %>
