<h1>User Index</h1>

<% @users.each do |user| %>
	<div class="row">
	  <div class="small-2 large-4 columns"><%= image_tag user.picture_url %></div>
	  <div class="small-6 large-2 columns">
	  	<div class="row"><%= user.first_name %> <%= user.last_name %></div>
	  	<div class="row"><%= user.industry %></div>
	  </div>
	  <div class="small-4 large-4 columns">
	  	<div class="row"><a href="#" class="button small">Interested?</a></div>
	  </div>
	  <div class="small-10 columns">
	  	<div class="row"><%= user.mission_statement %></div>
	  </div>
	</div>
<hr>
<% end %>