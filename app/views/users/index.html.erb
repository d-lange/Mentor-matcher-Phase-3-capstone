<div class="container">
<h1 class="text-center"><%= current_user.type == "Mentor" ? "Seeker" : "Mentor"%> Matches</h1>
<br>

  <% @users.each do |user| %>
    <a href="/users/<%=user.id%>">
      <div class="row">
        <p class="small-1 columns"></p>
        <div class="small-4 columns">
          <%=image_tag user.picture_url %>
        </div>
        <div class="small-7 columns">
          <b><%= user.first_name %> <%= user.last_name %></b><br>
          <small><%= user.current_title %> at</small><br>
          <b><%= user.current_company%></b><br>
          <small><%= user.location %></small><br>
        </div>
      </div>
    </a>

    <hr class="style-two">

    <div class="row">
      <div class="small-12 small-centered columns text-center">
        <small><i><%= user.mission_statement %></i></small>
      </div>
    </div>

    <hr class="style-two">

    <div class="row">
      <div class="small-12 columns">
        <div class="button-group expanded text-center">
          <a href="/users/<%=user.id%>" class="button fuzzy-search-button"><%= image_tag('100pxWhiteLogo.png', :alt=>'Mentorship', size: "30x30")%><br><%=user.first_name%>'s Profile</a>
          <a href="<%=user.public_profile_url%>" target="_blank" id="tabs-3-linkedin-button" class="button fuzzy-search-button"><i class="step fi-social-linkedin size-36"></i><br>LinkedIn</a>
          <%= link_to matches_path(:match => { :receiver_id => "#{user.id}" }), {:method => :post} do %>
            <div class="button warning fuzzy-search-button"><i class='step fi-like size-36'></i><br>Connect</div>
          <% end %>
        </div>
      </div>
    </div>

  <hr class="style-three">
<% end %>

</div>
