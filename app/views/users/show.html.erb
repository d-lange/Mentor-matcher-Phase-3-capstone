<h1 class="text-center"><b><%= @user.first_name %> <%= @user.last_name %></b> |
  <% if @user.status == 'available' %>
    <% if @user.type == 'Mentor' %>
      Offering
    <% else %>
      Seeking
    <% end %>
  <% end %></h1>

<!-- If errors - place here -->

  <div class="row">
    <div class="small-4 large-4 columns">
      <%=image_tag @user.picture_url %>
    </div>
    <div class="small-8 columns">
      <br>
      <small><%= @user.current_title %> at</small><br>
      <b><%= @user.current_company%></b><br>
    </div>
  </div>

<hr class="style-two">

<% if @errors %>
  <% @errors.each do |error| %>
    <div class="row">
      <div class="small-4 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-36"></i>
      </div>
      <div class="small-8 columns">
        <b><small><%=error%></small></b>
      </div>
    </div>
    <hr class="style-two">
  <% end %>
<% end %>

  <div class="row">
    <div class="small-12 small-centered columns text-center">
      <i><%= @user.mission_statement %></i>
    </div>
    <!-- <i class="step fi-pencil size-24"></i> -->
  </div>

<hr class="style-three">

  <% if @user.id != current_user.id %>
    <div class="row">
      <div class="small-12 columns">
        <%= link_to matches_path(:match => { :receiver_id => "#{@user.id}" }), {:method => :post} do %>
          <div class="button expanded success"><i class='step fi-shuffle size-36'></i><br>Connect!</div>
        <% end %>
      </div>
    </div>
  <%end%>

<% if @user.interests.length > 0 %>
    <p class="text-center">Current interests</p>
    <div class="row">
      <% @user.interests.each do |interest| %>
        <div class="small-6 columns">
          <a href="/interests/<%=interest.id%>" class="button expanded"><%= interest.name %></a>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="small-12 columns text-center">
      <p>You don't have any interests yet...<br> Add some using the form below!</p>
    </div>
  <% end %>

<hr class="style-two">

<div class="row">
  <div class="small-8 columns text-center">
    <%= form_for(:user_interests, url: user_interests_path, html: {method: "create"}) do |f| %>
    <select name="interest_id">
      <% (@interests - @user.interests).each do |int| %>
        <option value="<%=int.id%>"><%=int.name%></option>
      <%end%>
    </select>
  </div>
  <div class="small-4 columns text-center button">
    <%= f.submit value="Add Interest!" %>
  <% end %>
  </div>
</div>

<hr class="style-three">

  <% if @user.id != current_user.id %>
    <a href="<%= @user.public_profile_url %>" class="button">View me on LinkedIn</a>
  <% else %>
    <div class="button-group text-center">
      <a href="<%= @user.public_profile_url %>" class="button">View my LinkedIn Profile</a>
      <a href="https://www.linkedin.com/profile/edit?trk=nav_responsive_sub_nav_edit_profile" target='_empty' class="button">Edit my LinkedIn Profile</a>
    </div>
  <%end%>

<hr class="style-three">
