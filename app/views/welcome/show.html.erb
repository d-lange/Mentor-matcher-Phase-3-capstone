<h1 class="text-center"><%=current_user.first_name%>'s Dashboard</h1>

<div class="container">
  <div class="row">
    <div class="small-4 large-4 columns">
      <%=image_tag current_user.picture_url %>
    </div>
    <div class="small-8 columns">
      <b><%= current_user.first_name %> <%= current_user.last_name %></b><br>
      <small><%= current_user.current_title %> at</small><br>
      <b><%= current_user.current_company%></b><br>
    </div>
  </div>
  <hr class="style-two">

<% if @errors %>
  <% @errors.each do |error| %>
    <div class="row">
      <div class="small-4 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-36"></i>
      </div>
      <div class="small-8 columns">
        <b><small><%=error%></small></b>
      </div>
    </div>
    <hr class="style-two">
  <% end %>
<% end %>

<% if current_user.interests.length == 0 %>
    <div class="row">
      <div class="small-4 columns text-center">
        <i id='no-interests-glyphicon' class="step fi-lightbulb size-72"></i>
      </div>
      <div class="small-8 columns"><br>
        <b>You'll get noticed faster <br>
            if you add what fields <br>
            you're interested in!</b></div>
    </div>
    <hr class="style-two">
<% end %>
  <div class="row">
    <div class="small-6 columns">
    <% if current_user.id != current_user.messages.last.user_id && current_user.messages.last.read == false %>
      <a href="/conversations" id='no-interests-profile' class="button expanded"><i class="step fi-mail size-48"></i><br>My Inbox</a>
    <% else %>
      <a href="/conversations" class="button expanded"><i class="step fi-mail size-48"></i><br>My Inbox</a>
    <% end %>
    </div>
    <div class="small-6 columns">
      <a href="/matches" class="button expanded"><i class="step fi-torsos-all size-48"></i><br>My Requests</a>
    </div>
  </div>
  <div class="row">
    <div class="small-6 columns">
    <% if current_user.interests.length == 0 %>
      <a href="/users/<%=current_user.id%>" id='no-interests-profile' class="button expanded"><i class="step fi-torso size-48"></i><br>My Profile</a>
    <% else %>
      <a href="/users/<%=current_user.id%>" class="button expanded"><i class="step fi-torso size-48"></i><br>My Profile</a>
    <% end %>
    </div>
    <div class="small-6 columns">
      <a href="/users" class="button expanded"><i class="step fi-shuffle size-48"></i><br>Find <%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%></a>
    </div>
  </div>

  <% if current_user.interests.length > 0 %>
  <hr class="style-two">
  <div class="row">
    <div class="small-12 text-center columns">
      <small>Find <b><%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%></b> who share my interests in:</small>
    </div>
  </div>
    <div class="row">
        <% current_user.interests.each do |interest| %>
        <div class="small-6 columns">
          <a href="/interests/<%=interest.id%>" class="button expanded"><%=interest.name %></a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<hr class="style-two">
