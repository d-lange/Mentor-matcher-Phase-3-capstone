<h1><%=current_user.first_name%>'s Dashboard</h1>

<div class="row">
  <div class="small-3 large-4 columns">
    <%=image_tag current_user.picture_url %>
  </div>
  <div class="small-6 large-4 columns">
    <h4><%=current_user.location%></h4>
  </div>
  <div class="small-9 large-4 columns">
    <h4><%=current_user.current_title%> at <%=current_user.current_company%></h4>
  </div>
</div>

<div class="row">
  <div class="small-6 large-4 columns">
    <h4>Interests:</h4>
    <!-- List of interests goes here -->
  </div>
</div>
