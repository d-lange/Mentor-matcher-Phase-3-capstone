<h1 class="text-center"><%=current_user.first_name%>'s Dashboard</h1>

<div class="container">
  <div class="row">
    <p class="small-1 columns"></p>
    <div class="small-4 columns">
      <%=image_tag current_user.picture_url %>
    </div>
    <div class="small-7 columns">
      <%= current_user.current_title %> at<br>
      <b><%= current_user.current_company%></b><br>
      <small><%= current_user.location %></small><br>
    </div>
  </div>

<% if @errors %>
  <% @errors.each do |error| %>
    <br>
    <div class="row">
      <div class="small-3 columns text-center">
        <i id="error-glyphicon-notification" class="step fi-alert size-36"></i>
      </div>
      <div class="small-9 columns text-center">
        <b><%=error%></b>
      </div>
    </div>
  <% end %>
<% end %>
  <hr class="style-two">

<% if current_user.interests.length == 0 %>
    <div class="row">
      <div class="small-3 columns text-center">
        <i id='no-interests-glyphicon' class="step fi-lightbulb size-48"></i>
      </div>
      <div class="small-9 columns text-center"><br>
        <b>You'll get noticed faster if you add interests to your profile!</b></div>
    </div>
    <hr class="style-two">
<% end %>

  <div class="row">
    <div class="small-6 columns">
      <a href="/conversations" class="<%= current_user.unread_conversations_button_notification %> button expanded"><i class="step fi-mail size-36"></i><br>My Inbox</a>
    </div>
    <div class="small-6 columns">
      <a href="/matches" class="button expanded"><i class="step fi-torsos-all size-36"></i><br>My Requests</a>
    </div>
  </div>
  <div class="row">
    <div class="small-6 columns">
    <% if current_user.interests.length == 0 %>
      <a href="/users/<%=current_user.id%>" id='no-interests-profile' class="button warning expanded"><i class="step fi-torso size-36"></i><br>My Profile</a>
    <% else %>
      <a href="/users/<%=current_user.id%>" class="button expanded"><i class="step fi-torso size-36"></i><br>My Profile</a>
    <% end %>
    </div>
    <div class="small-6 columns">
      <a href="/users" class="button expanded"><i class="step fi-shuffle size-36"></i><br>Find <%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%></a>
    </div>
  </div>

  <% if current_user.interests.length > 0 %>
  <hr class="style-two">
  <div class="row">
    <div class="small-12 text-center columns">
      <small>Find <b><%= current_user.type == "Mentor" ? "Seekers" : "Mentors"%></b> who share my interests in:</small>
    </div>
  </div>
    <div class="row">
        <% current_user.interests.each do |interest| %>
        <div class="small-6 columns">
          <a href="/interests/<%=interest.id%>" class="button expanded professional-interest-button"><%=interest.name %></a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<hr class="style-two">
